<!DOCTYPE html>
<html>
  <head>
    <title>LifestyleArticles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.1.0/css/all.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="#">
      <div class='main-logo'>
        <% image_tag("LifesMemesWhiteBackground-01FACE-01.png") %>
      </div>
    </a>

    <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasic">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasic" class="navbar-menu">
    <div class="navbar-start" style="flex-grow: 1; justify-content: space-evenly;">
      <a class="navbar-item">
        Home
      </a>

      <%= link_to 'Create a Meme', new_article_path, class: "navbar-item" %>

    </div>

    <div class="navbar-end">
      <div class="navbar-item">
          <%= link_to 'Sign Up', new_user_path, class: "navbar-item" %>
      </div>

      <div class="navbar-item">
        | <%= link_to 'Login', new_session_path, class: "navbar-item" %>
      </div>
      <div class="navbar-item">
        | <%= link_to 'LogOut', log_out_path, class: "navbar-item" %>
      </div>
    </div>
  </div>
</nav>
  <body>
    <%= yield %>
  </body>

</html>