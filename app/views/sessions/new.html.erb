<section class="section">
  <div class="columns is-centered">
    <div class="column is-two-fifths">
    <h1 class="title has-text-white">Log In</h1>

      <% if flash[:errors] %>
        <% flash[:errors].each do |e| %>
          <p><%= e %></p>
        <% end %>
      <% end %>

      <%= form_tag sessions_path do %>
        <div class="card">

          <div class="field card-content pb-1">
            <%= label_tag  :email, nil, class: 'label' %>
            <p class="control has-icons-left has-icons-right">
              
              <%= email_field_tag :email, nil, class: 'input', placeholder: 'Email' %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>

          <div class="field card-content pt-1 pb-1">
            <%= label_tag :password, nil, class: 'label' %>
            <p class="control has-icons-left has-icons-right">
              
              <%= password_field_tag :password, nil, class: 'input' %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>

          <div class="control card-content pt-1">
            <%= submit_tag "Sign In", class: 'button is-orange has-text-white' %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</section>